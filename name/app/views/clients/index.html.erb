<h3>Klientu saraksts</h3>
<%= link_to 'Jauns klients', new_client_path %>

<table  class="table table-hover">
<thead>
  <tr>
    <th scope="col">Vards</th>
    <th scope="col">Uzvards</th>
    <th scope="col">Telefons</th>
    <th scope="col">Adrese</th>
    <th scope="col"></th>
  </tr>
</thead>

<tbody>
  <% @clients.each do |client| %>
    <tr>
      <td><%= client.vards %></td>
      <td><%= client.uzvards %></td>
      <td><%= client.tel_nummurs %></td>
      <td><%= client.adrese %></td>
      <td><%= link_to 'Vairak', client_path(client) %></td>
    </tr>
  <% end %>
</tbody>
</table>